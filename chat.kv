#:kivy 2.3.0
<ChatApp>:
    BoxLayout:
        orientation: 'vertical'

        Label:
            text: "Stephanies and Yulia's chat app"
            size_hint_y: None
            height: 50
        Label:
            id: incoming_msg_label
            text: 'incoming_msg_label'
            size_hint_y: None
            height: 50
        Label:
            id: recieved_msg
            text: 'Test'
            size_hint_y: None
            height: 50

        TextInput:
            id: text_input
            hint_text: 'Type here'
            multiline: False

        Button:
            text: 'Send'
            on_press: root.on_button_click(self)
